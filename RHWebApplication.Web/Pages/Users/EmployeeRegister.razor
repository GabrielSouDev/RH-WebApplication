@inject NavigationManager NavigationManager
@page "/EmployeeRegister"

<PageTitle>Register Employee</PageTitle>
<AuthorizeView>
    <Authorized>
        <MudContainer Class="d-flex justify-center align-center" Style="height: 100vh;">
            <MudCard Style="width: 70%;">
                <MudCardContent>
                    <MudForm>
                        <MudText Typo="Typo.h5">Register a Employee</MudText>
                        <MudTextField @bind-Value="employee.Name" T="string" Label="Name" Required="true">Name</MudTextField>
                        @* <MudTextField @bind-Value="user.Password" Label="Password" InputType="InputType.Password" Required="true" /> *@
                        <MudButton ButtonType="ButtonType.Submit" Color="Color.Primary" OnClick="HandleValidSubmit">Register</MudButton>
                    </MudForm>
                </MudCardContent>
            </MudCard>
        </MudContainer>
    </Authorized>
    <NotAuthorized>
        @{
            NavigationManager.NavigateTo("/NotAuthorized");
        }
    </NotAuthorized>
</AuthorizeView>

